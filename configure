#!/bin/sh

# Initializing some options
debug="false"

# Find the OS
OS=$(uname)
echo "******************************"
echo "* Detecting operating system *"
echo "******************************"
echo
echo Operating system: $OS

echo
echo "*************************"
echo "* Checking softwares... *"
echo "*************************" 
echo

# Needed softwares
softs="getopt ls grep head pkg-config g++ qmake lupdate lrelease make mv sed"
if [ $OS = "Linux" ]
then
	softs=$softs" moc-qt4"
elif [ $OS = "Darwin" ]
then
	softs=" moc"
fi

for soft in $softs
do
    path=$(which $soft)
    if [ $? = 1 ]
    then
        echo $soft missing !
        exit
    else
        echo $soft: $path        
    fi
done
echo 

# Reading options
supported_short_options="gh"
supported_long_options="help,debug"

options=$(getopt -s sh -l $supported_long_options $supported_short_options $@)
if [ $? = 1 ]   # unsupported options
then
    echo "Try the --help option for more information"
    exit 1
fi

for opt in $options
do
    case $opt in
        -g | --debug)   debug="true";;
        -h | --help)    echo "Usage: configure [options]\n\n -g, --debug\tEnable debugging\n -h, --help\tDisplay this usage guide"
            exit 0;;
        --) break;;
    esac
done

echo "*********************************"
echo "* Checking development files... *"
echo "*********************************"

# Needed headers

if [ $OS = "Linux" ]
then
	inc_path="/usr/include/"
elif [ $OS = "Darwin" ]
then
	inc_path="/opt/local/include/"
fi

# libXML++
echo
echo libXML++:
xml_devs="libxml++"
xml_dev_path=$(ls -l $inc_path | grep -o -e "libxml++-[0-9]\{1,\}\.[0-9]\{1,\}" | head -n 1)

for dev in $xml_devs
do
    if [ -e "$inc_path$xml_dev_path/libxml++/$dev.h" ]
    then
        echo $inc_path$xml_dev_path/libxml++/$dev.h: OK
    else
        echo $dev.h missing !
        exit
    fi
done

# SDL
echo
echo SDL:
sdl_devs="SDL_mixer SDL_sound"
sdl_dev_path=$inc_path"SDL"

for dev in $sdl_devs
do
    if [ -e "$sdl_dev_path/$dev.h" ]
    then
        echo $sdl_dev_path/$dev.h: OK
    else
        echo $dev.h missing !
        exit
    fi
done

#Boost
echo
echo Boost:
boost_devs="thread"
boost_dev_path=$inc_path"boost"

for dev in $boost_devs
do
    if [ -e "$boost_dev_path/$dev.hpp" ]
    then
        echo $boost_dev_path/$dev.hpp: OK
    else
        echo $dev.hpp missing !
        exit
    fi
done

echo
echo "********************************"
echo "* Preparing the compilation... *"
echo "********************************"
echo

qmake -project
lupdate GM-Assistant.pro
lrelease GM-Assistant.pro
mv translations/*.qm .
qmake

# adding the -g flag if the debug option is enabled
if [ $debug = "true" ]
then
    sed -i  "s#-pipe#-pipe -g#" Makefile
fi

# cleaning previous compilation
make -s clean

echo
echo "************************"
echo "* Adding librairies... *"
echo "************************"

# adding libxml++ and SDL includes in the Makefile
sed -i  "s#-I\.#$(pkg-config $xml_dev_path --cflags-only-I) $(pkg-config sdl --cflags-only-I)#" Makefile

# adding libxml++ and SDL binaries
sed -i  "s#-lQtCore#-lQtCore $(pkg-config $xml_dev_path --libs) -lSDL_mixer -lSDL_sound -lboost_thread#" Makefile

echo
echo "********************"
echo "* Ready to compile *"
echo "********************"
echo
echo To compile, type make
